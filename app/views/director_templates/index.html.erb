<h1>
  List of all directors
</h1>

<hr>

<form action="/insert_director" method="post">
  <div>
    <label for="new_director_name" >Name</label>
    <input id="new_director_name" name="new_director_name" type="text">
  </div>

  <div>
    <label for="new_director_dob" >Dob</label>
    <input id="new_director_dob" name="new_director_dob" type="date">
  </div>

  <div>
    <label for="new_director_bio" >Bio</label>
    <textarea id="new_director_bio" name="new_director_bio" rows="3"></textarea>
  </div>
 
  <div>
    <label for="new_director_image" >Image</label>
    <input id="new_director_image" name="new_director_image" type="text">
  </div>

  <button>Create director</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.order({:dob => :desc}).each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
