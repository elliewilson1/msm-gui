<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<a href="/movies">
  Go back
</a>

<div>
  <a href="/delete_movie/<%= @the_movie.id %>">Delete movie</a>
</div>

<hr>

<form action="/modify_movie/<%= @the_movie.id %>" method="post">

  <div>
    <label for="title_edit">Title</label>
    <input id="title_edit" type="text" name="updated_title" value="<%= @the_movie.title %>">
  </div>

  <div>
    <label for="year_edit">Year</label>
    <input id="year_edit" type="text" name="updated_year" value="<%= @the_movie.year %>">
  </div>

  <div>
    <label for="duration_edit">Duration</label>
    <input id="duration_edit" type="text" name="updated_duration" value="<%= @the_movie.duration %>">
  </div>

  <div>
    <label for="description_edit">Description</label>
    <textarea id="description_edit" name="updated_description" rows="3"><%= @the_movie.description %></textarea>
  </div>

  <div>
    <label for="image_edit">Image</label>
    <input id="image_edit" type="text" name="updated_image" value="<%= @the_movie.image %>">
  </div>

  <div>
    <label for="director_edit">Director ID</label>
    <input id="director_edit" type="text" name="updated_director" value="<%= @the_movie.director_id %>">
  </div>

  <button>Update movie</button>

</form>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>

    <% if the_director == nil %>
      Uh oh! We weren't able to find a director for this movie.
    <% else %>
      <%= the_director.name %>
    <% end %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
